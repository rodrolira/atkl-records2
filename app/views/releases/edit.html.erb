<!-- app/views/releases/edit.html.erb -->
<div class="container mx-auto mt-24">
  <h2 class="text-2xl font-bold mb-4 text-white text-center">Editar Release</h2>
  <%= form_with(model: @release, local: true, html: { class: "contents" }) do |form| %>
    <% if @release.errors.any? %>
      <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
        <h2><%= pluralize(@release.errors.count, "error") %> prohibited this release from being saved:</h2>
        <ul>
          <% @release.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="my-5">
      <%= form.label :title, class:'text-white' %>
      <%= form.text_field :title, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
    </div>

    <div class="my-5">
      <%= form.label :catalogue, class:'text-white' %>
      <%= form.text_field :catalogue, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
    </div>

    <div class="my-5">
      <%= form.label :bandcamp_embed_code, class:'text-white' %>
      <%= form.text_area :bandcamp_embed_code, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
    </div>

    <div class="inline">
      <%= form.submit "Guardar cambios", class: "rounded-lg py-3 px-5 bg-blue-600 text-white inline-block font-medium cursor-pointer" %>
    </div>
  <% end %>
</div>
