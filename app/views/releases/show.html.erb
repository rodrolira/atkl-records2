<!-- app/views/releases/show.html.erb -->

<div class="mt-24">
        <h1 class="text-4xl text-white text-center font-bold mb-2"><%= @release.title %></h1>

      <!-- Botón de edición -->
      <% if current_admin_user %>
  <%= link_to 'Eliminar Release', @release, method: :delete, data: { confirm: '¿Estás seguro?' }, class: 'btn btn-danger' %>
  <%= link_to edit_release_path(@release), class: "mx-auto text-white bg-blue-600 rounded-full py-2 px-4 mt-4 inline-block font-medium cursor-pointer" do %>
    Editar release
  <% end %>
  <% end %>


<div class="flex">
  <!-- Sección de información básica del releasea -->
  <div class="w-1/3 p-4 border-r text-center text-white">
   <% if @release.cover_art.attached? %>
     <%= image_tag rails_blob_url(@release.cover_art), class: "rounded-t-lg" %>
   <% else %>
     <!-- Aquí puedes colocar una imagen de marcador de posición o algún otro contenido cuando no haya cover_art -->
     <p>Imagen no disponible</p>
   <% end %>
    <h1 class="text-2xl font-bold mb-2"><%= @release.title %></h1>
    <p class=" mb-2 uppercase"><%= @release.catalogue %></p>
    <!-- Iconos de redes sociales aquí -->
  </div>
  </div>
</div>
</div>

