<div class="parallax-container flex">
  <div class="parallax-content flex w-full">
    <!--Contenido del encabezado aquÃ­-->
    <div class="container mx-auto my-24">
      <section id="main" class="main h-full flex flex-col">
        <div class="logo-main flex items-center h-full w-full">
          <%= image_tag "main.png", alt: "main", class: "h-56 mx-auto" %>
        </div>
        <div class="text-center text-white flex flex-col py-8">
          <h1 class="title-main font-extrabold text-5xl"> HARD TECHNO IS LIFE</h1>
          <h2 class="text-3xl"> LABEL </h2>
        </div>
      </section>
    </div>
  </div>
</div>

<section id="artists" class="p-5">
  <div class="container mx-auto mt-8">
    <h2 class="text-4xl text-white text-center font-bold mb-4"> Artistas</h2>
    <div class="grid grid-cols-1 md:grid-cols-4 lg:grid-cols-6 gap-4">
      <% @artists.each do |artist| %>
        <%= render 'shared/artist_card', artist: artist %>
      <% end %>
    </div>
  </div>
</section>

<section id="releases" class="p-5">
  <h2 class="text-4xl text-white text-center font-bold mb-4">Lanzamientos</h2>
  <div class="grid grid-cols-1 md:grid-cols-4 lg:grid-cols-6 gap-4">
    <% @releases.each do |release| %>
      <%= render 'shared/release_card', release: release %>
    <% end %>
  </div>
</section>
