<!-- app/views/artists/show.html.erb -->

<div class="mt-32">
        <h1 class="text-4xl text-white text-center font-bold mb-2"><%= @artist.name %></h1>

      <!-- Botón de edición -->
      <% if current_admin_user %>
  <%= link_to edit_artist_path(@artist), class: "mx-auto text-white bg-blue-600 rounded-full py-2 px-4 mt-4 inline-block font-medium cursor-pointer" do %>
    Editar Artista
  <% end %>
  <% end %>
<div class="flex">
  <!-- Sección de información básica del artista -->
  <div class="w-1/3 p-4 border-r text-center text-white">
    <% if @artist.profile_picture.attached? %>
      <%= image_tag rails_blob_url(@artist.profile_picture), class: "rounded-t-lg" %>
    <% else %>
      <!-- Agrega una imagen de respaldo o estilo alternativo si no hay imagen adjunta -->
      <%= image_tag "avatar.jpg", class: "rounded-t-lg" %>
    <% end %>
    <h1 class="text-2xl font-bold mb-2"><%= @artist.name %></h1>
    <p class=" mb-2 uppercase"><%= @artist.profession %></p>
    <!-- Iconos de redes sociales aquí -->
  </div>

  <!-- Sección de biografía y releases del artista -->
  <div class="w-2/3 p-4 text-white text-center">
    <h2 class="text-2xl font-bold mb-4">Biografía</h2>
    <p class="text-white"><%= @artist.biography %></p>

    <h2 class="text-2xl font-bold mt-8 mb-4">Releases</h2>
    <% @artist.releases.each do |release| %>
      <div class="mb-4">
      <%= render 'shared/release_card', release: release %>
        <!-- Otros detalles del release según tus necesidades -->
      </div>
    <% end %>
  </div>
</div>
</div>

